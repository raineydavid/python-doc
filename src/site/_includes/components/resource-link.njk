<li class="mt-6">
  <h4 class="text-lg font-bold"><a href="{{ item.link }}" rel="noopener" target="_BLANK">{{ item.title }}</a></h4>
  <time value="{{ item.date | formatDate('y-MM-dd') }}" class="text-gray-400 text-xs">{{ item.date | formatDate }}</time>
  <p class="text-gray-600 text-xs">{{ item.link | domain }}</p>
  {# <p>{{ item.description }}</p> #}
</li>
