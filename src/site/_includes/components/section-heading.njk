{% macro heading(title, icon, description ) %}
  <h2 class="text-3xl mt-0 mb-2 text-white text-bold md:text-4xl md:mt-12">
    <img src="/img/svg/{{ icon }}" class="inline-block" />
    {{ title }}
  </h2>
  <p class="text-md font-bold inline-block bg-pink-900 text-white p-y px-2 mb-4 md:text-lg leading-relaxed">
    {{ description | safe }}
  </p>
{% endmacro %}




{% macro benefit(title, icon, description ) %}
  <div class="w-3/5 my-10">
    <h3 class="text-xl text-bold text-white text-bold md:text-3xl">
    <img src="/img/svg/{{ icon }}" class="pr-2 inline-block " alt="{{ title }}" />
      {{ title }}
    </h3>
    <div class="text-blue-100 mt-6">
      {{ description | safe }}
    </div>
  </div>
{% endmacro %}





